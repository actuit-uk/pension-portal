{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "src": "../src"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml", "api/index.md"]
      },
      {
        "files": ["articles/**.md", "articles/**/toc.yml", "index.md", "toc.yml"]
      }
    ],
    "dest": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appTitle": "Pension Portal Documentation",
      "_appFooter": "&copy; 2026 actuit-uk"
    }
  }
}
