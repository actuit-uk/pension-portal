@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">Something went wrong</h1>
    <p class="lead">An unexpected error occurred while processing your request.</p>
    @if (Model.ShowRequestId)
    {
        <p class="text-muted">Reference: <code>@Model.RequestId</code></p>
    }
    <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
