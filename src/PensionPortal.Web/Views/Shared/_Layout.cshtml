<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pension Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Pension Portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Scheme" asp-action="Index">Schemes</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Calcs</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="GmpEqualisation" asp-action="Index">GMP Equalisation</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Docs" asp-action="Article" asp-route-name="about">Docs</a>
                        </li>
                    </ul>
                    @{
                        var activeRole = Context.Session.GetString("Role");
                        var roleConfig = activeRole != null
                            ? PensionPortal.Web.Models.RoleConfig.Find(activeRole)
                            : null;
                    }
                    @if (roleConfig != null)
                    {
                        <span class="badge bg-info text-dark me-3">@roleConfig.DisplayName</span>
                        <a class="btn btn-outline-light btn-sm" asp-controller="Home" asp-action="Index">Switch Role</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container d-flex justify-content-between">
            <span>&copy; 2026 - Pension Portal - actuit-uk</span>
            <span>
                <a href="https://github.com/actuit-uk/pension-portal/issues/new?template=bug.yml" class="text-muted me-3">Report Bug</a>
                <a href="https://github.com/actuit-uk/pension-portal/issues/new?template=story.yml" class="text-muted">Request Feature</a>
            </span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
