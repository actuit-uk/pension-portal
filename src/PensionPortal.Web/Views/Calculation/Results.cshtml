@using System.Data
@model DataTable
@{
    ViewData["Title"] = "Results";
}

<h1>Calculation Results</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a class="btn btn-primary btn-sm" asp-action="Index">New Calculation</a>
    <a class="btn btn-outline-secondary btn-sm" asp-action="ExportCsv">Export CSV</a>
</p>

@if (Model.Rows.Count == 0)
{
    <p>No results yet. Run a calculation first.</p>
}
else
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Surname</th>
                <th>Date of Birth</th>
                <th>Calculation Date</th>
                <th>Age (months)</th>
                <th>Factor</th>
                <th>Calculated At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["FirstName"]</td>
                    <td>@row["Surname"]</td>
                    <td>@(((DateTime)row["DateOfBirth"]).ToString("dd MMM yyyy"))</td>
                    <td>@(((DateTime)row["CalculationDate"]).ToString("dd MMM yyyy"))</td>
                    <td>@row["AgeInMonths"]</td>
                    <td>@(row["FactorValue"] == DBNull.Value ? "-" : row["FactorValue"])</td>
                    <td>@(((DateTime)row["CalcTimeStamp"]).ToString("dd MMM yyyy HH:mm"))</td>
                </tr>
            }
        </tbody>
    </table>
    <p>@Model.Rows.Count result(s)</p>
}
