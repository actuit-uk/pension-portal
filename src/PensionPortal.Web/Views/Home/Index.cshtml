@model IReadOnlyList<PensionPortal.Web.Models.RoleConfig>
@{
    ViewData["Title"] = "Select Role";
}

<h1>Pension Portal</h1>
<p class="lead">Select a role to simulate. In production, roles will be derived from identity claims.</p>

<div class="row mt-4 g-3">
    @foreach (var role in Model)
    {
        <div class="col-md-6 col-lg-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@role.DisplayName</h5>
                    <p class="card-text">@role.Description</p>
                    @if (role.SchemeIds != null)
                    {
                        <p class="card-text text-muted small">
                            Schemes: @string.Join(", ", role.SchemeIds)
                        </p>
                    }
                    else if (role.PersonId == null)
                    {
                        <p class="card-text text-muted small">Schemes: All</p>
                    }
                    <a asp-action="SelectRole" asp-route-role="@role.Key"
                       class="btn btn-primary mt-auto">Select</a>
                </div>
            </div>
        </div>
    }
</div>
